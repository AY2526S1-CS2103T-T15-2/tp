@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs
Class FilteredList

Class UniqueContactList
Class Contact
Class Nric
Class Name
Class Email
Class Phone
Class Address
Class Tag

Class UniquePolicyList
Class Policy
Class PolicyId
Class PolicyName
Class PolicyDetails

Class UniqueContractList
Class Contract
Class ContractId
Class ContractPremium
Class LocalDate

Class UniqueAppointmentList
Class Appointment
Class AppointmentDetails
Class AppointmentId

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniqueContactList
AddressBook *--> "1" UniqueAppointmentList
AddressBook *--> "1" UniquePolicyList
AddressBook *--> "1" UniqueContractList
UniqueContactList --> Contact
UniqueContractList --> Contract
UniqueAppointmentList --> Appointment
UniquePolicyList --> Policy

UniqueContactList -[hidden]right-> I
UniqueContractList -[hidden]right-> I
UniquePolicyList -[hidden]right-> I
UniqueAppointmentList -[hidden]right-> I

Contact *--> Name
Contact *--> Nric
Contact *--> Phone
Contact *--> Address
Contact *--> Email
Contact *--> Tag

Contract *--> ContractId
Contract ..> Name
Contract ..> Nric
Contract ..> PolicyId
Contract *--> LocalDate:dateSigned
Contract *--> LocalDate:expiryDate
Contract *--> ContractPremium

Policy *--> PolicyName
Policy *--> PolicyDetails
Policy *--> PolicyId

Appointment ..> Nric
Appointment *--> LocalDate
Appointment *--> AppointmentDetails
Appointment *--> AppointmentId

ModelManager --> "~* filtered" FilteredList
@enduml
