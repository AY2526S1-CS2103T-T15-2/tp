@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":RemoveContactCommandParser" as RemoveContactCommandParser LOGIC_COLOR
participant "d:RemoveContactCommand" as RemoveContactCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("remove_contact 1")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("remove_contact 1")
activate AddressBookParser

create RemoveContactCommandParser
AddressBookParser -> RemoveContactCommandParser
activate RemoveContactCommandParser

RemoveContactCommandParser --> AddressBookParser
deactivate RemoveContactCommandParser

AddressBookParser -> RemoveContactCommandParser : parse("1")
activate RemoveContactCommandParser

create RemoveContactCommand
RemoveContactCommandParser -> RemoveContactCommand
activate RemoveContactCommand

RemoveContactCommand --> RemoveContactCommandParser :
deactivate RemoveContactCommand

RemoveContactCommandParser --> AddressBookParser : d
deactivate RemoveContactCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
RemoveContactCommandParser -[hidden]-> AddressBookParser
destroy RemoveContactCommandParser

AddressBookParser --> LogicManager : d
deactivate AddressBookParser

LogicManager -> RemoveContactCommand : execute(m)
activate RemoveContactCommand

RemoveContactCommand -> Model : deleteContact(1)
activate Model

Model --> RemoveContactCommand
deactivate Model

create CommandResult
RemoveContactCommand -> CommandResult
activate CommandResult

CommandResult --> RemoveContactCommand
deactivate CommandResult

RemoveContactCommand --> LogicManager : r
deactivate RemoveContactCommand

[<--LogicManager
deactivate LogicManager
@enduml
